<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TP2</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="/css/_layout.css" />
    <link rel="stylesheet" href="/css/style.css" />
    @* <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/TP2.styles.css" asp-append-version="true" /> *@
</head>
<body class="bg-secondary-emphasis">
    <header>
        <nav class="navbar navbar-expand-lg bg-info">
            <div class="container-fluid">
                <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
                    <div class="navbar-nav">
                        <p class="text-light trello-logo">Trello</p>
                        <a class="nav-link active text-light" asp-controller="Home" asp-action="Index"><b>Home</b></a>
                        @{
                            ConnexionController checkingConnected = new();
                        }
                        @if (!checkingConnected.IsConnected())
                        {
                            <a class="nav-link text-light" asp-controller="Connexion" asp-action="Connexion">Connexion</a>
                        }
                        else
                        {
                            <a class="nav-link text-light" asp-controller="Connexion" asp-action="Deconnexion">Se déconnecter</a>
                        }
                        @if (checkingConnected.IsConnected())
                        {
                            <a class="nav-link text-light" asp-controller="Projet" asp-action="Index">Projets</a>
                        }
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer>
        <hr>
        <div class="footer-container">
            <p>TP2</p>
            <p>2023</p>
            <p>Vincent Dupont</p>
        </div>
    </footer>
    @* <script src="~/lib/jquery/dist/jquery.min.js"></script> *@
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

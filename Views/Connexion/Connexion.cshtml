@{
    ViewData["Title"] = "Authentification";
}
<h1>@ViewData["Title"]</h1>

<div class="card">

    <form method="POST" asp-controller="Connexion" asp-action="Connexion">

        <div class="input-group m-3">
            <p><input class="px-5" type="text" id="email" name="email" placeholder="Mail"></p>
        </div>

        <div class="input-group m-3">
            <p><input class="px-5" type="password" id="motDePasse" name="motDePasse" placeholder="Mot de passe"></p>
        </div>

        <div class="input-group m-3">
            <input type="submit" value="Login" />
        </div>

    </form>
</div>